<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TwoFactorAuthenticator" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.TwoFactorAuthenticator.Splash" parent="Theme.SplashScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/colorOnPrimary</item>
        <item name="postSplashScreenTheme">@style/Theme.TwoFactorAuthenticator</item>
    </style>
</resources>